{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["webpack.config.js"],
    "rules": {
        "no-console": "off", // ignores console.log formatting
        "linebreak-style": "off", // ignores LF vs CRLF errors
        "func-names": "off",
        "no-unused-vars": "off",
        "no-plusplus": "off",
        "wrap-iife": "off",
        "no-underscore-dangle": "off"
    }
}
